{
  "compilerOptions": {
    /* Basics */
    "target": "esnext",
    "module": "commonjs",
    "outDir": "./build",
    "resolveJsonModule": true,
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "./src",
    "typeRoots": ["interfaces", "../node_modules/@types"],
    /* Resolution */
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },
  "include": ["**/*.ts", "src/bot.ts", "config-dev.json", "config-prod.json"]
}
